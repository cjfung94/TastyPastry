<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tastypastry">

    <application
        android:allowBackup="true"
        android:icon="@drawable/tastypastry_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tastypastry_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.TastyPastry">
        <activity android:name=".HelpActivity"
            android:launchMode="singleTop" />
        <activity android:name=".AboutActivity"
            android:launchMode="singleTop" />
        <activity android:name=".Settings"
            android:launchMode="singleTop" />
        <activity android:name=".Favorites"
            android:launchMode="singleTop" />
        <activity android:name=".Filter"
            android:launchMode="singleTop" />
        <activity android:name=".MainActivity"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".DashBoardActivity"
                  android:launchMode="singleTop"  />
        <activity android:name=".TutorialActivity" />
        <activity android:name=".DisplayPastryRecipe"
                  android:launchMode="singleTop" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>